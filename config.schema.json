{
  "pluginAlias": "HomebridgePluginHomeassistant",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "protocol": {
        "title": "Protocol",
        "type": "string",
        "default": "tcp",
        "oneOf": [
          {
            "title": "TCP",
            "enum": [
              "tcp"
            ]
          },
          {
            "title": "TCPs",
            "enum": [
              "tcps"
            ]
          }
        ]
      },
      "host": {
        "title": "Host",
        "type": "string",
        "required": true,
        "default": "localhost"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "required": true,
        "default": 1883,
        "maximum": 65535
      },
      "homebridgeConfigTopic": {
        "title": "Homebridge Config Topic",
        "type": "string",
        "required": true,
        "default": "config/homebridge-811503bd-ae80-42c0-afc4-a82f3d537415"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      }
    }
  }
}